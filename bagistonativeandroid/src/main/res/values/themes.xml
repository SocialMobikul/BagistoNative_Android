<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Demo" parent="Theme.Material3.DayNight.NoActionBar">

        <!--        for fit system window-->
        <item name="android:fitsSystemWindows">true</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Demo" parent="Base.Theme.Demo" />

    <style name="Theme.FullScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Make content fullscreen -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- Remove status and nav bar (for immersive mode) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Make background black/white or any solid color -->
        <item name="android:windowBackground">@color/white</item>
    </style>

</resources>